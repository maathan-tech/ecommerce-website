    <style>
        .product-image-thumbs {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }
        
        .product-image-thumb {
            border: 1px solid #ddd;
            padding: 5px;
            cursor: pointer;
        }
        
        .product-image-thumb:hover {
            border-color: #28a745;
        }
        
        .price-tag {
            font-size: 24px;
            color: #28a745;
        }
        
        .old-price {
            text-decoration: line-through;
            color: #6c757d;
        }
        
        .feature-icon {
            width: 50px;
            height: 50px;
            background: #f8f9fa;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 10px;
        }
/*         
        .related-product-card {
            transition: transform 0.2s;
        }
        
        .related-product-card:hover {
            transform: translateY(-5px);
        } */
        .related-product-card {
    border: 1px solid #eee;
    border-radius: 8px;
    transition: transform 0.2s, box-shadow 0.2s;
    display: flex;
    flex-direction: column;
    height: 100%;
}

.related-product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.product-image-wrapper {
    position: relative;
    padding-top: 100%; /* Maintains a square aspect ratio */
    width: 100%;
}

.related-product-image {
    height: 150px; /* Adjust height as needed for uniformity */
    width: 100%;
    object-fit: cover;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
}


.card-body {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
}

.card-title {
    font-size: 1rem;
    margin-bottom: 0.5rem;
    font-weight: 500;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.price-tag {
    font-size: 1.5rem;
    font-weight: bold;
    color: #229834;
}

.mt-auto {
    margin-top: auto;
}

        .navbar-brand {
            color: #28a745 !important;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }
        .zoom-container {
            position: relative;
            overflow: hidden;
        }

        #mainProductImage {
            width: 100%;
            height: auto;
            cursor: crosshair; /* Change cursor to crosshair for better indication */
        }

        .zoom-window {
            position: absolute;
            border: 2px solid #000;
            border-radius: 4px;
            width: 200px; /* Width of the zoom window */
            height: 200px; /* Height of the zoom window */
            overflow: hidden;
            display: none;
            pointer-events: none; /* Prevent interaction with the zoom window */
            z-index: 1000; /* Ensure it appears on top */
        }
        footer {
            background-color: #1c1c1c;
            color: white;
            padding: 3rem 0;
            margin-top: 3rem;
        }

        .footer-logo {
            color: white;
            text-decoration: none;
            font-size: 1.5rem;
            font-weight: bold;
        }

        .footer-links {
            list-style: none;
            padding: 0;
        }

        .footer-links li {
            margin-bottom: 0.5rem;
        }

        .footer-links a {
            color: #999;
            text-decoration: none;
        }

        .footer-links a:hover {
            color: white;
        }

        .payment-methods img {
            height: 10px;
            margin-right: 0.5rem;
        }
       
    </style>
</head>
